%p
	.field_label Number:
	= @episode.number
%p 
	.field_label Title:
	= @episode.title
%p
	.field_label First Shown
	= @episode.first_shown
%p
	.field_label Synopsis
	= @episode.synopsis

- session[:episode_id] = @episode.id

- unless @cast.empty?
	%h2 Cast
	%table
		%tr
			%th Character
			%th Actor's name
			%th
			%th
		- @cast.each do |cast|
			%tr
				%td= cast.role
				%td= "#{cast.first_name} #{cast.surname}"
				%td= link_to "Show", participant_path(cast)
				- if user_signed_in?
					%td= link_to "Delete", cast, method: :delete,
																			confirm: "Are you sure?"
- unless @crew.empty?
	%h2 Crew
	%table
		%tr
			%th Position
			%th Name
			%th
			%th
		- @crew.each do |crew|
			%tr
				%td= crew.role
				%td= "#{crew.first_name} #{crew.surname}"
				%td= link_to "Show", participant_path(crew)
				- if user_signed_in?
					%td= link_to "Delete", crew, method: :delete,
																			confirm: "Are you sure?"
- if user_signed_in?
	= link_to "Add cast or crew", new_episode_participant_path(@episode)